{# Opnemen van de "Main" file #}
{% extends "main.html.twig" %}

{% block header %}
   <a href="http://localhost/educom-verrukkulluk/educom-verrukkulluk/index.php?recept_ID=&action=homepage">
        <img src="assets/img/logo-v2.png"/>
    </a>
{% endblock %}


{# nu de block content op in de main pagina vullen #}
{% block content %}
    {# Dit is commentaar #}

    {# Print #}
    {# <h1>Heading #1</h1>
    <h2>Heading #2</h2>
    <h3>Heading #3 t/m 5</h3>

    <h4>Dit is de template {{  title }}</h4> #}

{# Loop #}
    <div>
    {% for record in data %}
        {% if record.ID % 2 != 0 %}
            <div class="row ">
        {%  endif  %}

            <div class="col-sm-6 recept gy-5">
                
                <div class="row">
                    <img src="assets/img/logo-v2.png" class="img-fluid">
                </div>

                <div class="row p-3">
                    <div class="col-sm-6">
                        <h1 style="color: var(--darker-green);"> {{ record.naam }}  </h1>
                    </div>
                    <div class="col-sm-6 text-right">
                        {% for i in 0..4 %}
                            {% if record.waardering > i %}
                                <i class="fas fa-star rating"></i> 
                            {% else %}
                                <i class="far fa-star rating"></i> 
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>

                <div class="row p-3" style="height: 200px;">
                    <div class="col-sm-12">
                                {{ record.korte_omschrijving }}
                    </div>
                </div>

                <div class="row p-3">
                    <div class="col-sm-6">
                        <a href="http://localhost/educom-verrukkulluk/educom-verrukkulluk/index.php?recept_ID={{record.ID}}&action=detail">
                            <button class="button">Smullen! </button>
                        </a>

                    </div>
                    <div class="col-sm-6 text-right">
                        <i class="fas fa-user icon"></i> <font size="5">4 </font>
                        <i class="fas fa-euro-sign icon"></i> <font size="5">{{ record.totaal_prijs|round(0, 'ceil') }},- </font>
                        <i class="fas fa-fire icon"></i> <font size="5">{{ record.totaal_calorien|round(0, 'ceil') }}</font>
                    </div>
                </div>

            </div>

        {% if record.ID % 2 == 0 %}
            </div>
        {%  endif  %}
    {% endfor %}
    </div>
     {# Dump #}
       {# <pre>
        {{ dump(data) }}
       </pre> #}

{% endblock %}

{% extends "main.html.twig" %}

{% block header %}
    <a href="http://localhost/educom-verrukkulluk/educom-verrukkulluk/index.php?recept_ID=&action=homepage">
        <img src="assets/img/logo-v2.png"/>
    </a>
{% endblock %}

{% block content %}
                {% set record = data[0] %}

                <div class="row">
                    
                    <div class="col-sm-6">
                        <img src="assets/img/logo-v2.png" class="img-fluid">
                    </div>

                    <div class="col-sm-6">
                        <div class="row p-3">
                            <div class="col-sm-12">
                                <i class="fas fa-user icon"></i> <font size="5">4 </font>
                                <i class="fas fa-euro-sign icon"></i> <font size="5">{{ record.totaal_prijs|round(0, 'ceil') }},- </font>
                                <i class="fas fa-fire icon"></i> <font size="5">{{ record.totaal_calorien|round(0, 'ceil') }}</font>
                            </div>   
                        </div>
                        <div class="row p-3">
                            <div class="col-sm-6">
                                <h1 style="color: var(--darker-green);"> {{ record.naam }}  </h1>
                            </div>
                            <div class="col-sm-6 text-right">
                                {% for i in 0..4 %}
                                    {% if record.waardering > i %}
                                        <i class="fas fa-star rating"></i> 
                                    {% else %}
                                        <i class="far fa-star rating"></i> 
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>

                         <div class="row p-3">
                            <div class="col-sm-6">
                                <h3 style="color: var(--darker-green);"> Keuken </h3> <font size="3"> {{ record.keuken }}</font>
                            </div>
                            <div class="col-sm-6 text-right">
                                <h3 style="color: var(--darker-green);"> Type </h3> <font size="3"> {{ record.type }}</font>
                            </div>
                        </div>

                        <div class="row p-3" style="height: 500px;">
                            <div class="col-sm-12">
                                {{ record.lange_omschrijving }}
                            </div>
                        </div>
                        
                        <div class="row p-3">
                            <div class="col-sm-6">
                                <button class="button">Op lijst! </button>
                            </div>
                            <div class="col-sm-6 text-right">
                                <i class="fas fa-heart icon"></i>
                                <i class="far fa-heart icon"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <a href="http://localhost/educom-verrukkulluk/educom-verrukkulluk/index.php?recept_ID={{record.ID}}&action=detail&detail=ingredients">
                           <div class="col-sm-2 border">
                            <h3 style="color: var(--darker-green);"> IngrediÃ«nten </h3>
                        </div> 
                    </a>
                    <a href="http://localhost/educom-verrukkulluk/educom-verrukkulluk/index.php?recept_ID={{record.ID}}&action=detail&detail=steps">
                           <div class="col-sm-2 border">
                            <h3 style="color: var(--darker-green);"> Bereidingswijze </h3>
                        </div> 
                    </a>
                    <a href="http://localhost/educom-verrukkulluk/educom-verrukkulluk/index.php?recept_ID={{record.ID}}&action=detail&detail=remarks">
                           <div class="col-sm-2 border">
                            <h3 style="color: var(--darker-green);"> Opmerkingen </h3>
                        </div> 
                    </a>

